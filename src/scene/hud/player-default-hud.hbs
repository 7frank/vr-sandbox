<a-plane visible="false" id="player-hud" click-drag compass position="0 0.4 0" scale="1 1 1" height="0.02" width="0.2"
         src="#compass-texture"
         material="transparent:true;opacity:0.7;repeat:0.25 1">

    <a-entity class="the-world-map" position="0 -.1 0" scale="0.02 0.02 0.02" height="0.2" width="0.2"
              rotation="0 0 90"></a-entity>


    <a-text class="player-count" value="Player Online 1" position="-0.95 .05 0" width=".6"></a-text>


    <!-- TODO online-player-datasource -->
    <nk-list-view datasource="player-stats-datasource" arrows="false" ref=playerNames scale=".1 .1 .1" position="-.85 0 0"
                  overflow="false">

        <a-plane v-for="(item, index) in getVisibleItems(0,5)"
                 opacity="0.3"
                 :position="setPositionFromIndex(index,1,5,1,-.5)"
                 height=".5"
                 width="3"
                 gui-border
        >
            <a-text
                    position="-1.2 0 0"
                    :value="item.value"
            >
            </a-text>

            <a-text
                    position="1.2 0 0"
                    :value="item.score"
            >
            </a-text>


        </a-plane>
    </nk-list-view>


</a-plane>

