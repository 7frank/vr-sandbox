<a-entity id="region-select-menu"  visible="false" >

    <nk-list-view position="-.5 .3 0"
                  order-as="grid: 2 5 .5 .25"
                  scale=".25 .25 .25"
                  orientation="column"
                  arrows="false"
                  datasource="region-ds"

    >

<!-- FIXME when setPositionFromIndex(index,5,2,2,1)"  the current selected element is not as intended, also selecting elements does not work wheen visible min <0-->
        <a-plane
                 gui-border
                 v-for="(item, index) in getVisibleItems(0,8)"
                 opacity="0.3"
                 :color="isSelected(index)?'blue':isHovered(index)?'slateblue':'grey'"
                 :position="setPositionFromIndex(index,3,3,2,-1)"

                 width="2"

                 @focus="onItemHover(index)"
                 @interaction-pick.stop="onItemSelected(index)"
                 @interaction-talk.stop="onItemClicked(index)"

                 :selected="isSelected(index)?true:null"
        >

            <img v-if="item.value.url" :id="item.value.id" :src="item.value.url">

            <a-image v-if="item.value.url"  scale=".9 .9 .9" position="0 0 0" :src="'#' + item.value.id"></a-image>

            <a-text  :value="item.key" align='center' opacity="0.3" width="1.8" transparent="true"
                     position="0 .6 0"></a-text>

        </a-plane>
    </nk-list-view>


</a-entity>