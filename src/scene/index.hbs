<script>
    // Define custom schema for syncing avatar color, set by random-color
    var avatarSchema = {
        template: '#avatar-template',
        components: [
            'position',
            'rotation',
            {
                selector: '.head',
                component: 'material',
                property: 'color'
            },
            {
                selector: '.name',
                component: 'text',
                property: 'value'
            },
            {
                selector: '.say',
                component: 'text',
                property: 'value'
            }

        ]
    };
    NAF.schemas.add(avatarSchema);


    var ballSchema = {
        template: '#ball-template',
        components: [
            'position',
            'rotation'
        ]
    };
    NAF.schemas.add(ballSchema);



    var importedElementSchema = {
        template: '#imported-element-template',
        components: [
            'position',
            'rotation',
            'scale',
            {
                selector: '.content',
                component: 'networked-imported-model',
                property: 'src'
            }
        ]
    };
    NAF.schemas.add(importedElementSchema);



</script>

