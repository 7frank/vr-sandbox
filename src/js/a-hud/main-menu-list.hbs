

<nk-list-view id="mm" position="0 0 .1" scale=".5 .5 .5" orientation="row" invert="false" selected-index="0" arrows="false" >
    <a-plane v-for="(item, index) in items"

             :position="setPosition(-4+4*Math.cos(0.05*index/items.length*2*Math.PI-Math.PI*0.0),4*Math.sin(0.05*index/items.length*2*Math.PI-Math.PI*0.0))"
             material="transparent:true;opacity:0.3;"
             :color="selectedIndex==index?'blue':'white'"
             height=".21"
             @focus="onItemClicked(index)"
             @interaction-pick.stop="onItemSelected(index)"
             @interaction-talk.stop="onItemClicked(index)"
    >
        <a-text font="assets/fonts/DejaVu-sdf.fnt" height=".19" align='center'
                :value="item.value"
                material="transparent:true;opacity:0.3;"
                color="lightgrey"
                @focus="onItemClicked(index)"
                @interaction-pick.stop="onItemSelected(index)"
                @interaction-talk.stop="onItemClicked(index)"
        ></a-text>
    </a-plane>

    <template>[{key:1,value:"Start"},{key:1,value:"Config"},{key:1,value:"About"},{key:1,value:"T-o-S"}]</template>
</nk-list-view>